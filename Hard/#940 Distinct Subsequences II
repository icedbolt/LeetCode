class Solution:
    def distinctSubseqII(self, s: str) -> int:
        n = len(s)
        dp = [0] * (n + 1)
        dp[0] = 1
        mod = 10 ** 9 + 7
        last = {}

        for i in range(1, n + 1):
            ch = s[i - 1]
            dp[i] = (2 * dp[i - 1]) % mod

            if ch in last:
                dp[i] = (dp[i] - dp[last[ch] - 1]) % mod
            
            last[ch] = i
        return (dp[n] - 1) % mod
